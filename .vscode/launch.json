   {
      "version": "0.2.0",
      "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Jest: Current",
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
          "args": [
            "${fileBasename}",
            "-c",
            "./jest.config.js",
            "--verbose",
            "-i",
            "--no-cache",
            "--watchAll"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Jest: All",
          "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "args": [
            "-c",
            "./jest.config.js",
            "--verbose",
            "-i",
            "--no-cache"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Jest: All-Watch",
          "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "args": [
            "--verbose",
            "-i",
            "--no-cache",
            "--watchAll"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      }
    ]
  }